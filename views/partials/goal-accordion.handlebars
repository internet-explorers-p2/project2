<div class="container-fluid" id="accordion-area">
  <div class="card mt-3">
    <div class="card-header" id="headingOne">
      <h2 class="mb-0">
        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapse{{dataValues.id}}"
          aria-expanded="true" aria-controls="collapse{{dataValues.id}}">
          {{dataValues.title}}
        </button>
      </h2>
    </div>

    <div id="collapse{{dataValues.id}}" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
      <div class="card-body">

        <div class="add-new-milestone">
          <button type="button" id="add-milestone-button" class="btn btn-outline-dark" data-toggle="modal"
            data-target="#milestoneModal" data-whatever="milestone">Add a Milestone</button>
        </div>

        <div id="progressbar"></div>

        <a id="plus">+</a>
        <a id="minus">-</a>
        <p id="progressLabel">0%</p>
      </div>
    </div>
  </div>
</div>